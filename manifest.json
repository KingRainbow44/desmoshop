{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "manifest_version": 3,
  "name": "desmosshop",
  "version": "0.1.0",
  "description": "An artist's best friend for making line art!",
  "content_scripts": [
    {
      "js": ["content.ts"],
      "matches": ["https://*.desmos.com/*"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["**/*"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["src/index.ts"],
      "matches": ["<all_urls>"]
    }
  ]
}